<%- include('partials/header.ejs'); %>
<body>
    <%- include('partials/navbar.ejs'); %>
    <div class="container index">
        
        <h1> <%= pergunta.titulo %> </h1>
        <p> <%= pergunta.descricao %> </p>
        
        <form action="/responder" method="POST">
            <h3>Responda</h3>
            <label for=""> Sua resposta: </label>
            <textarea placeholder="Coloque sua resposta" name="corpo" class="form-control"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary"> Enviar </button>
        </form>

        <h3>Respostas: </h3>
        <% respostas.forEach((resposta) => { %>

            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>

        <% }); %>
    </div>
</body>
<%- include('partials/footer.ejs'); %>